{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext","es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "rootDirs": ["src"],
    "outDir": "dist",
    "target": "es2020",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/homePageSections/section1/Section1"],
  "exclude": ["node_modules"]
}
